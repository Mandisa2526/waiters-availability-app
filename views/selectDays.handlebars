<body>
    <div class="container">
        <div class="header text-center" img="/images/restaurant.jpg">
            <h1>Waiters Availability Form</h1>
        </div>
        <div class="main clearfix">
            <form action="/waiters/{{name}}" method="post">
                <div class="container" style="background-color: white;padding:1em;margin:1em;">
                    <div class="main clearfix">
                        <p>errorM</p>
                        <div style="padding: 10px;margin:1em">
                            <h2 style="font-weight: bold;font-size:medium" class="text-center">Hi {{name}},this is where you are going to
                                select the days you will be working.</h2>
                        </div>
                        <!--check box for each week day-->
                        <div class=" btns text-center">
                            <input type="checkbox" name="days" value="Monday">
                            <label for="day1">Monday</label><br>
                            <input type="checkbox" name="days" value="Tuesday">
                            <label for="day2">Tuesday</label><br>
                            <input type="checkbox" name="days" value="Wednesday">
                            <label for="day3">Wednesday</label><br>
                            <input type="checkbox" name="days" value="Thursday">
                            <label for="day4">Thursday</label><br>
                            <input type="checkbox" name="days" value="Friday">
                            <label for="day5">Friday</label><br>
                            <input type="checkbox" name="days" value="Saturday">
                            <label for="day6">Saturday</label><br>
                            <input type="checkbox" name="days" value="Sunday">
                            <label for="day7">Sunday</label><br>

                            <input type="submit" value="Submit" class="btn-default btn btn-primary">
                            <button class="btn btn-dark"><a href="/">logOut</a></button>
                        </div>
                    </div>
                </div>
            </form>
            <script>

                let error = document.querySelector(".errorM");

                setTimeout(function () {
