<body>
    <div class="container">
        <div class="header text-center" img="/images/restaurant.jpg">
            <h1>Waiters Availability Form</h1>
        </div>
        <div class="main clearfix">
            <form action="waiters/{{name}}">
            <div class="container" style="background-color: white;padding:1em;margin:1em;">
                <div class="main clearfix">
                    <div style="padding: 10px;margin:1em">
                        <p style="font-weight: bold;font-size:medium">Hi {{name}},this is where you are going to select the days you will be working.</p>
                    </div>

                    <!--check box for each week day-->
                  <form >
                    <input type="checkbox" id="moonday" name="moonday" value="monday">
                    <label for="day1">Monday</label><br>
                    <input type="checkbox" id="toosday" name="toosday" value="tuesday">
                    <label for="day2">Tuesday</label><br>
                    <input type="checkbox" id="wens" name="wens" value="wednesday">
                    <label for="day3">Wednesday</label><br>
                    <input type="checkbox" id="thus" name="thus" value="thursday">
                    <label for="day4">Thursday</label><br>
                    <input type="checkbox" id="fri" name="fri" value="friday">
                    <label for="day5">Friday</label><br>
                    <input type="checkbox" id="sat" name="sat" value="saturday">
                    <label for="day6">Saturday</label><br>
                    <input type="checkbox" id="sunny" name="sunny" value="sunday">
                    <label for="day7">Sunday</label><br>
                    <div class=" btns text-center" style="display:flex">
                        <button class="btn btn-dark"><a href="/">submit</a></button>
                        <button class="btn btn-dark"><a href="/">Back</a></button>
                    </div>
                  </form>
                </div>
            </div>
            </form>
            <div class="footer">

            </div>
        </div>


</body>

</html>